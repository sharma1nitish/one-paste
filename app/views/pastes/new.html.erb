<% content_for :title do %>
New Paste
<% end %>

<div class="row row-offcanvas row-offcanvas-left">
  <div class="col-xs-12 col-sm-9" data-spy="scroll" data-target="#sidebar-nav">
    <%= form_tag paste_path, class: "form-horizontal", role: "form" do %>
  <div class="form-group">
    <label class="col-sm-2 control-label" >Content</label>
    <div class="col-sm-10" id="myfield">
      <%= text_area_tag :content, 'Here you go...', class: "form-control", placeholder: "Here you go..", size: '10x20', spellcheck: false %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Paste!', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
  </div>
</div>
